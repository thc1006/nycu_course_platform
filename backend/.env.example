# Database Configuration
# SQLite (default for development)
DATABASE_URL=sqlite:///./nycu_course_platform.db

# PostgreSQL (recommended for production)
# DATABASE_URL=postgresql://username:password@localhost:5432/nycu_course_platform

# MySQL/MariaDB
# DATABASE_URL=mysql+pymysql://username:password@localhost:3306/nycu_course_platform

# SQLAlchemy Configuration
SQLALCHEMY_ECHO=false

# Application Configuration
DEBUG=true
SECRET_KEY=your-secret-key-here-change-in-production

# API Configuration
API_TITLE=NYCU Course Platform API
API_VERSION=0.1.0
API_PREFIX=/api/v1

# CORS Configuration (comma-separated list)
CORS_ORIGINS=http://localhost:3000,http://localhost:5173

# JWT Configuration
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=30

# Server Configuration (for uvicorn)
HOST=0.0.0.0
PORT=8000
RELOAD=true

# Logging Configuration
LOG_LEVEL=INFO
